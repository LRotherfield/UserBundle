{% extends "UserBundle::layout.html.twig" %}
{% form_theme form "UserBundle:Theme:form.html.twig" %}
{% block body %}
  <form action="{{ path("user_reset_password", {'id' : id, 'token' : token}) }}" method="post" {{form_enctype(form)}}>
    <div id="user-form">
      {{ form_widget(form) }}
      <input type="submit" value="Register" />
    </div>
  </form>
{% endblock %}