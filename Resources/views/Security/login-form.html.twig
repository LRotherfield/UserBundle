{% extends 'UserBundle::layout.html.twig' %}
{% form_theme form "UserBundle:Theme:login.html.twig" %}
{% block body %}
{{ parent() }}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
<form action="{{ path('_login_check') }}" method="post" class="login">
  {{ form_widget(form) }}
  <input type="submit" value="login" name="login" />
</form> 
{% endblock %}